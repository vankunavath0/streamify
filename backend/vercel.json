{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
